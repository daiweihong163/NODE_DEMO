button{
  margin: 20rpx;
  background-color: rgb(253, 253, 253);
}
.modal{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  transition:all ease-in .5s;
  background-color: #00000000;
  pointer-events: none;
}
.show{
  background-color: #0000004d;
  pointer-events: stroke;
}